generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  internalId       String        @id @default(cuid())
  id               String
  name             String
  openingInventory Int
  dailyRecords     DailyRecord[]
  user             User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String
  
  @@unique([userId, id])
}

model DailyRecord {
  id               Int     @id @default(autoincrement())
  day              Int
  procurementQty   Int
  procurementPrice Float
  salesQty         Int
  salesPrice       Float
  inventory        Int
  product          Product @relation(fields: [productId], references: [internalId], onDelete: Cascade)
  productId        String

  @@unique([productId, day])
}
